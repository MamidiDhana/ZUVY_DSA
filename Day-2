//Largest Element In Array
// optimal approach


class Solution {
    public static int largest(int[] arr) {
        int n=arr.length;
         int largest=0;
    for(int i=0;i<n;i++)
    {
        if(arr[i]>largest)
        largest=arr[i];
    }
    return largest;
    }
}

//Brute force

import java.util.*;
class Solution
{
    public static void main(String[] args)
    {
           int n=arr.length;
        int arr[]=new int[n];
        Arrays.sort(arr);
        System.out.print(arr[n-1]);
    }
}
