//Second Largest In Array
//optimal solution
    class Solution
{
    public int getSecondLargest(int[] arr) {
      int n=arr.length;
      if(n<2)
      {
          return -1;
      }
      int largest=Integer.MIN_VALUE;
      int secondLargest=Integer.MIN_VALUE;
      for(int i=0;i<n;i++)
      {
          if(arr[i]>largest )
          {
              secondLargest=largest;
              largest=arr[i];
          }
          else if (arr[i] > secondLargest && arr[i] != largest)
            {
                secondLargest = arr[i];
            }
      }
      return (secondLargest == Integer.MIN_VALUE) ? -1 : secondLargest;
    }
}


//Brute Force Approach

  import java.util.*;
class Solution {
    public int getSecondLargest(int[] arr) {
         int n=arr.length;
        if(n<2)
        {
            return -1;
        }
        Arrays.sort(arr);
        int largest=arr[n-1];
        for(int i=n-2;i>=0;i--)
        {
            if(arr[i]!=largest){
                return arr[i];
            }
        }
        return -1;
    }
   
}
